<!DOCTYPE html>
@{
  Layout="Shared/_Layout.cshtml";
}

<div class="container">
  <div class="page-header">
    <h1>Current Students</h1>
  </div>
  <h4><a href="/students/add_new">Add new student</a></h4>
  @if (Model.Count == 0)
  {
    <p>There are no students currently enrolled.</p>
  }
  else
  {
    <ul>
    @foreach (var student in Model)
    {
      <li><a href="/students/@student.GetId()">@student.GetName()</a></li>
    }
    </ul>
  }
  <h5><a href="/">Home</a></h5>
</div>
